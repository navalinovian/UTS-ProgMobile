<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="UTS Pemrograman Mobile"
                android:layout_marginTop="30dp"
                android:textSize="30sp"
                />

            <Button
                android:id="@+id/btn_siswa"
                android:layout_width="300dp"
                android:layout_height="75dp"
                app:layout_constraintTop_toBottomOf="@id/judul"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="50dp"
                android:text="Siswa"
                android:onClick="siswa_btn"
                />
            <Button
                android:id="@+id/btn_guru"
                android:layout_width="300dp"
                android:layout_height="75dp"
                app:layout_constraintTop_toBottomOf="@id/btn_siswa"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="Guru"
                />
            <Button
                android:id="@+id/btn_matpel"
                android:layout_width="300dp"
                android:layout_height="75dp"
                app:layout_constraintTop_toBottomOf="@id/btn_guru"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="Mata Pelajaran"
                />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="300dp"
                android:layout_height="75dp"
                app:layout_constraintTop_toBottomOf="@id/btn_matpel"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="btn_3"
                />

            <Button
                android:id="@+id/btn_4"
                android:layout_width="300dp"
                android:layout_height="75dp"
                app:layout_constraintTop_toBottomOf="@id/btn_3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="btn_4"
                />
            <Button
                android:id="@+id/btn_5"
                android:layout_width="300dp"
                android:layout_height="75dp"
                app:layout_constraintTop_toBottomOf="@id/btn_4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="btn_5"
                />
            <Button
                android:id="@+id/btn_6"
                android:layout_width="300dp"
                android:layout_height="75dp"
                app:layout_constraintTop_toBottomOf="@id/btn_5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="btn_6"
                />
            <Button
                android:id="@+id/btn_7"
                android:layout_width="300dp"
                android:layout_height="75dp"
                app:layout_constraintTop_toBottomOf="@id/btn_6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="btn_7"
                />
            <Button
                android:id="@+id/btn_8"
                android:layout_width="300dp"
                android:layout_height="75dp"
                app:layout_constraintTop_toBottomOf="@id/btn_7"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="btn_8"
                />
            <Button
                android:id="@+id/btn_9"
                android:layout_width="300dp"
                android:layout_height="75dp"
                app:layout_constraintTop_toBottomOf="@id/btn_8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="btn_9"
                />
            <Button
                android:id="@+id/btn_10"
                android:layout_width="300dp"
                android:layout_height="75dp"
                app:layout_constraintTop_toBottomOf="@id/btn_9"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="btn_10"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>